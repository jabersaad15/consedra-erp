{
  "name": "consedra-erp",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=@consedra/api",
    "dev:web": "turbo run dev --filter=@consedra/web",
    "dev:mobile": "turbo run dev --filter=@consedra/mobile",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:migrate": "pnpm --filter @consedra/api prisma:migrate",
    "db:seed": "pnpm --filter @consedra/api prisma:seed",
    "db:studio": "pnpm --filter @consedra/api prisma:studio",
    "db:generate": "pnpm --filter @consedra/api prisma:generate",
    "db:push": "pnpm --filter @consedra/api prisma:push",
    "docker:up": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  }
}
